<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] BWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toastr.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

</head>
<body>
    <header>
        <div id="top-header">
        <nav class="navbar navbar-expand-lg" style="height: 2rem;">
            <div class="container-fluid">

                @* <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>  *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                        <ul class="navbar-nav header-links pull-left">
                       
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Topic" asp-action="Index">@_localization.Getkey("Topics")</a>
                        </li>
                      
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="User" asp-action="Index">@_localization.Getkey("Users")</a>
                        </li>
                    </ul>

                       
                    <partial name="_LoginPartial" />
                      

                </div>
            </div>

        </nav>

        </div>

        <nav class="navbar navbar-expand-lg border-bottom border-primary border-3 shadow" style="height: 4rem;">
            <div class="container-fluid">
             
                    
                        <a class="navbar-brand me-auto" asp-area="" asp-controller="Home" asp-action="Index">
                           @*  <img src="~/Files/Logo/BName.png" class="" style="width:140px;" /> *@
                             
 
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav position-absolute top-0 start-50 translate-middle-x">
                        <li class="nav-item ">
                                        <a class="nav-link active " asp-area="Customer" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-house-door h5"></i>
                                        @_localization.Getkey("Home")
                                        </a>
                                </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Guidance">@_localization.Getkey("Guidance")</a>
                             </li>

                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Admin" asp-controller="Topic" asp-action="Index">@_localization.Getkey("Images")</a>
                        </li>

                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Admin" asp-controller="Topic" asp-action="Index">@_localization.Getkey("Audios")</a>
                        </li>

                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Admin" asp-controller="Topic" asp-action="Index">@_localization.Getkey("Vedios")</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Admin" asp-controller="Topic" asp-action="Index">@_localization.Getkey("Reading")</a>
                        </li>
                        

                    </ul>



                    <a class="navbar-brand align-items-center position-absolute top-0 start-0" asp-area="" asp-controller="Home" asp-action="Index">

                     @*  <img src="~/Files/Logo/Blogo.png" class="" style="width:50px;" />  *@

                            </a>

                       
                          
                       
                    </div>
                </div>
            
        </nav>
    </header>
    <div >
        <main role="main" class="container-fluid">
            @RenderBody()
        </main>
    </div>

    <div style="bottom:0;position: fixed; width:100%;" class="bg-primary text-light text-center">

        <footer>
            <i class="bi bi-c-circle"></i> Burhaniya
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toastr.js" asp-append-version="true"></script>








    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
