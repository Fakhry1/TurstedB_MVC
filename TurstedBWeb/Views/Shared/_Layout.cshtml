<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] BWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toastr.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

</head>
<body>
    <header>
        <div class="row">
            <div id="top-header">
                <nav class="navbar navbar-expand-lg" style="height: 2rem;">
                    <div class="container-fluid">

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 p-2">
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                                <ul class="navbar-nav pull-left">



                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Topic" asp-action="Index"> <i class="bi bi-envelope h6 m-1"></i>@_localization.Getkey("Test@test.com")</a>
                                    </li>

                                    @*  <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Topic" asp-action="Index">@_localization.Getkey("Topics")</a>
                                    </li>

                                    <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Admin" asp-controller="User" asp-action="Index">@_localization.Getkey("Users")</a>
                                    </li> *@
                                </ul>


                                @*  <partial name="_LoginPartial" /> *@

                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 p-2 ">
                            <ul class="navbar">
                                <li class="nav-item dropdown position-absolute top-20 start-0 mt-3">
                                    <a class="nav-link dropdown-toggle text-white " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-translate h4"></i>
                                    </a>
                                    <ul class="dropdown-menu position-absolute top-5 start-0">
                                        <li class="nav-item">
                                            <a class="dropdown-item text-center " asp-action="ChangeLanguage" asp-area="Customer" asp-controller="Home" asp-route-culture="ar"> @_localization.Getkey("عربي")</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="dropdown-item text-center" asp-action="ChangeLanguage" asp-area="Customer" asp-controller="Home" asp-route-culture="en"> @_localization.Getkey("English") </a>
                                        </li>
                                    </ul>
                                </li>


                            </ul>
                        </div>
                        @* <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        </button>  *@

                    </div>
            </div>

            </nav>

        </div>
        </div>
        <nav class="navbar navbar-expand-lg border-bottom border-primary border-3 shadow" style="height: 4rem;">
            <div class="container-fluid">


                <a class="navbar-brand me-auto" asp-area="" asp-controller="Home" asp-action="Index">
                     <img src="~/Files/Logo/BName.png" class="" style="width:140px;" />


                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav position-absolute top-0 start-50 translate-middle-x">
                        <li class="nav-item ">
                            <a class="nav-link active " asp-area="Customer" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door h5"></i>
                                @_localization.Getkey("Home")
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Guidance">@_localization.Getkey("News")</a>
                        </li>

                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-route-SubCategoryID="2" asp-action="AllImages">@_localization.Getkey("Images")</a>
                        </li>

                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="AllAudio">@_localization.Getkey("Audios")</a>
                        </li>

                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-route-SubCategoryID ="4" asp-action="AllVideos">@_localization.Getkey("Vedios")</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-area="Customer" asp-controller="Topic" asp-action="Index">@_localization.Getkey("Reading")</a>
                        </li>


                    </ul>



                    <a class="navbar-brand align-items-center position-absolute top-0 start-0" asp-area="" asp-controller="Home" asp-action="Index">

                         <img src="~/Files/Logo/Blogo.png" class="" style="width:50px;" /> 

                    </a>




                </div>
            </div>

        </nav>
    </header>
    <div>
        <main role="main" class="container-fluid">
            @RenderBody()
        </main>
    </div>

    <div style="bottom:0;position: fixed; width:100%;" class="bg-primary text-light text-center">

        <footer>
            <div class="row">
                <div class="col-4 d-sm-inline-flex justify-content-between">
                    
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Topic" asp-action="Index">@_localization.Getkey("Topics")</a>
                       

                        
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="User" asp-action="Index">@_localization.Getkey("Users")</a>
                     
                </div>
                <div class="col-2">
                     Burhaniya
                </div>
                <div class="col-6">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toastr.js" asp-append-version="true"></script>








    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
