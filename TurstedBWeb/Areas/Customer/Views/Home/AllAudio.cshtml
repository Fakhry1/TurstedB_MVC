@model List<Topics>


@{
    string Titel = "";
    string path1 = "";
    Pager pager = new Pager();
    int pageNo = 0;
    int ToltalP = 0;
    int Next = 0;
    int Prev = 0;
    int subCategory = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
        ToltalP = pager.TotalPages;
        Next = pageNo + 1;
        Prev = pageNo - 1;
        subCategory = pager.SubCategoryID;
    }
    if (subCategory == 6)
    {
        Titel = "Qasaeid and Hadrah";
    }
    else if (subCategory == 7)
    {
        Titel = "Lessons";
    }
    else if (subCategory == 4)
    {
        Titel = "Holiya";
    }
    else if (subCategory == 4)
    {
        Titel = "Speech";
    }
    else if (subCategory == 4)
    {
        Titel = "Jumaha";
    }
}

