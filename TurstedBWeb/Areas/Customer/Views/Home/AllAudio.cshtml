@model AudioVM


@{
    Pager pager = new Pager();
    int pageNo = 0;
    int ToltalP = 0;
    int Next = 0;
    int Prev = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
        ToltalP = pager.TotalPages;
        Next = pageNo + 1;
        Prev = pageNo - 1;
    }
}

<style>

    audio {
        max-height: 100%;
        max-width: 100%;
        margin: auto;
        object-fit: contain;
    }
</style>


<div class="row shadow mt-1 m-1">
    <div class="col-12 text-end">
        <h6 class="text-primary py-2">@_localization.Getkey("Audio - Qasaeid and Hadara")</h6>
    </div>
</div>

 @if(Model.AudioQList !=null){
<div class="row">
  
    <div class="col-10">
        <partial name="_AudioQ"/>
      
        </div>
  
</div>
}

<div class="row shadow mt-1 m-1">
    <div class="col-12 text-end">
        <h6 class="text-primary py-2">@_localization.Getkey("Audio - Leasones")</h6>
    </div>
</div>

@if(Model.AudioLesonList !=null){

<div class="row">
        <div class="col-10">
        <partial name="_AudioL" />
        </div>
    </div>

}

    @* ________________________Pagination_________________ *@


<div class="container">
    <div class="row">
        <div class="col-4"></div>
        @if (pager.TotalPages > 0)
        {
            <div class="col-4">
                <nav class="Pager1" aria-label="pagination example">
                    <ul class="pagination pagination-circle justify-content-center pagination-lg">
                        @* @if (pager.CurrentPage >= 1)
                    { *@
                        <li class="page-item ">
                            <a class="page-link" asp-area="" asp-controller="Home" asp-action="AllAudio" asp-route-pg="1">@_localization.Getkey("First")</a>
                        </li>
                        <li class="page-item ">
                            <a class="page-link " asp-area="" asp-controller="Home" asp-action="AllAudio" asp-route-pg="@Prev">@_localization.Getkey("Prev")</a>
                        </li>
                        @*   } *@
                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                        {
                            <li class="page-item @(pge == pager.CurrentPage ? "active": "")">
                                <a class="page-link" asp-area="" asp-controller="Home" asp-action="AllAudio" asp-route-pg="@pge">@pge</a>
                            </li>
                        }
                        @*  @if( pager.TotalPages>0)
                    { *@
                        <li class="page-item ">
                            <a class="page-link" asp-area="" asp-controller="Home" asp-action="AllAudio" asp-route-pg="@Next">@_localization.Getkey("Next")</a>
                        </li>
                        <li class="page-item ">
                            <a class="page-link " asp-area="" asp-controller="Home" asp-action="AllAudio" asp-route-pg="@ToltalP">@_localization.Getkey("Last")</a>
                        </li>
                        @* } *@

                    </ul>
                </nav>
            </div>
        }



        <div class="col-4"></div>

    </div>
</div>
    
         
@section Scripts {


}
