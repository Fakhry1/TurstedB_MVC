@model AudioVM

<style>

    audio {
        max-height: 100%;
        max-width: 100%;
        margin: auto;
        object-fit: contain;
    }
</style>

<div class="row">

    <div class="col-lg-10 col-md-10 col-sm-10">
        <div class="card-body p-4 ">

            @* <div class="container"> *@
            <div class="row">
                @foreach (var obj in Model.AudioQList.OrderBy(u => u.CreationDate))
                {
                    <div class="col-lg-4 col-md-3 col-sm-4 col-xs-12 p-2">
                        <div class="card radius-10 border-start border-end border-0 border-3 border-info">
                            <div class="card-body p-0 shadow">

                                <div class="title text-center">
                                    <h6 class="mb-1 mt-1">
                                        @obj.Titel
                                        <a asp-controller="Home" asp-action="DownloadAudio" asp-route-path="@obj.MainFile">
                                            <i class="bi bi-download h5 "></i>
                                        </a>
                                    </h6>
                                </div>

                                <div class="text-center">
                                    <audio controls>

                                        <source src="@obj.MainFile" type="audio/ogg">
                                        <source src="@obj.MainFile" type="audio/mpeg">
                                        Your browser does not support the audio element.
                                    </audio>
                                    <p class="small text-muted text-truncate">
                                        @obj.TopicDiscription

                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>

        @*   </div> *@
    </div>

</div>
