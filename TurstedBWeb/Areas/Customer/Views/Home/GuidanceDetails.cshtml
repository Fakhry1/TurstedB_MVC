@model RequestDetailsVM

<div class="container card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">@Model.topic.Titel</h3>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @if (Model.topic != null)
        {

            <div class="row pb-3 border shadow">

              @*   <div class="form-floating py-2 col-4">
                    <input class="form-control" value="@Model.topic.Category.ArabicName" disabled />
                    <label class="ms-2">Categroy</label>

                </div> *@
                <p><h5 class="text-success">@Model.topic.Category.ArabicName</h5></p>
                <p>@Model.topic.TopicDiscription</p>

                @* <div class="form-floating py-2 col-8">
                    <input class="form-control" value="@Model.topic.TopicDiscription" disabled />
                    <label class="ms-2">Description</label>

                </div> *@

            </div>



            <div class="row d-flex flex-row">
                <div class="col-12 text-end">
                    <h5 class=" py-2">@_localization.Getkey("Download Files")</h5>
                </div>
                @foreach (var obj in Model.AttachmentsList.OrderBy(u => u.AttachmentSetDate))
                {

                    <div class="col-lg-3 col-sm-3">
                        <div class="card  border-0 rounded">
                            <div class="card-body p-0">
                                @obj.FileName

                                <a asp-controller="Home" asp-action="DownloadFile" asp-route-id="@obj.FileId" class="btn btn-primary rounded text-center">
                                    <i class="bi bi-download h6"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                }
            </div>

        }
    </div>
</div>
