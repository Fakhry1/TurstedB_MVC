@model RequestDetailsVM

<div class="modal fade modal-dialog modal-xl" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark ">

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            </div>
            <div class="modal-body">
                <form asp-action="GuidanceDetails" asp-route-Id="@Model.topic.TopicId">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="topic.Titel"></label>
                        <input asp-for="topic.Titel" class="form-control" value="@Model.topic.Titel" disabled />
                    </div>
                </form>
               @*  <a asp-controller="Home" asp-action="GuidanceDetails" asp-route-Id="@Model.TopicId" class="btn-success btn" type="button" >
                الملفات 
                </a>  *@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
