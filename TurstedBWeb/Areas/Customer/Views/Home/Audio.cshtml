@model List<Topics>


@{
    Pager pager = new Pager();
    int pageNo = 0;
    int ToltalP = 0;
    int Next = 0;
    int Prev = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
        ToltalP = pager.TotalPages;
        Next = pageNo + 1;
        Prev = pageNo - 1;
    }
}

<style>

    audio {
        max-height: 100%;
        max-width: 100%;
        margin: auto;
        object-fit: contain;
    }
</style>


    <div class="row shadow mt-1">
        <div class="col-12 text-end">
            <h6 class="text-primary py-2">@_localization.Getkey("Audio - Qasaeid and Hadara")</h6>
        </div>
    </div>


<div class="row">
    <div class="col-1 mt-5 text-center d-flex flex-row text-muted"> <i class="bi bi-arrow-bar-right  h4"></i><a class="page-link " asp-area="" asp-controller="Home" asp-action="Audio" asp-route-pg="@Prev">@_localization.Getkey("Prev")</a></div>
    <div class="col-10">
        <div class="row d-flex">

            <div class="col-10">
                <div class="card-body p-4 ">

                    <div class="container">
                        <div class="row d-flex flex-row">
                            @foreach (var obj in Model.OrderBy(u => u.CreationDate))
                            {


                                <div class="col-lg-4 col-sm-4">
                                    <div class="card shadow-sm border rounded">
                                        <div class="card-body p-0">
                                            <div class="text-center shadow p-1">
                                                <h6 class="mb-1 mt-1">@obj.Titel</h6>
                                                <audio controls>

                                                    <source src="@obj.MainFile" type="audio/ogg">
                                                    <source src="@obj.MainFile" type="audio/mpeg">
                                                    Your browser does not support the audio element.
                                                </audio>
                                                <p class="small text-muted text-truncate">
                                                    @obj.TopicDiscription
                                                    <a asp-controller="Home" asp-action="DownloadAudio" asp-route-path="@obj.MainFile">
                                                        <i class="bi bi-download h6"></i>
                                                    </a>
                                                </p>
                                            </div>

                                        </div>
                                    </div>

                                </div>


                            }
                        </div>
                    </div>

                </div>
            </div>

        </div>
        </div>
    <div class="col-1 mt-5 text-center d-flex flex-row text-muted">  <a class="page-link" asp-area="" asp-controller="Home" asp-action="Audio" asp-route-pg="@Next">@_localization.Getkey("Next")</a><i class="bi bi-arrow-bar-left h4"></i></div>
</div>



