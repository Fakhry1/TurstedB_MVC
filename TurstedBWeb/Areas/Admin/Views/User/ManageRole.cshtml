@model RolesViewModel
<form method="post">
    <input asp-for="@Model.User.Id" hidden />
    <br />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-dark ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h4 class="text-white py-2">@_localization.Getkey("Manage User Roles")</h4>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="border p-2 rounded">

                <div class="form-group">
                    <label class="col-12">@_localization.Getkey("User Name")</label>
                    <div class="col-md-12">
                        <input asp-for="User.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-12">@_localization.Getkey("User Email")</label>
                    <div class="col-md-12">
                        <input asp-for="User.Email" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group mt-3 p-2 border rounded">
                    <span>@_localization.Getkey("Roles Assignment")</span>
                    @for (int i = 0; i < Model.RolesList.Count; i++)
                    {
                        <div class="m-2 form-check ">
                            <input asp-for="@Model.RolesList[i].RoleName" hidden />
                            <input asp-for="@Model.RolesList[i].IsSelected" class="form-check-input h4" />
                            <label class="form-check-label" asp-for="@Model.RolesList[i].IsSelected">
                                @Model.RolesList[i].RoleName
                            </label>
                        </div>
                    }

                </div>


                <div class="form-group pt-3 row">
                   
                    <div class="col-md-6 ">
                        <input type="submit" class="btn btn-primary w-100" value="@_localization.Getkey("Update")" />
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-primary w-100" asp-action="Index">@_localization.Getkey("Back to List")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
